<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".LogIn">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/logo"
        android:contentDescription="Imagen del logo" />

    <EditText
        android:id="@+id/campoLUsuario"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="70dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_action_user" />

    <EditText
        android:id="@+id/campoLContraseña"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Contraseña"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_action_password" />




    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp" >

        <Button
                android:id="@+id/botonLLogIn"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorAccent"
                android:text="Log In"
                android:textColor="#fff"
                android:textSize="20sp" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvLRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Here!"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvLRecuperar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot your password? Get it back here."
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:textSize="15sp"/>


</LinearLayout>